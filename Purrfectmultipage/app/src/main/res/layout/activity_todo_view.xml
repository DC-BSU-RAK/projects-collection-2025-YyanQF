<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/todo_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".todoActivityView">

    <TextView
        android:id="@+id/todo1"
        android:layout_width="138dp"
        android:layout_height="111dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="400dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:tag="note1"
        android:text="Type something..."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ongoing"
        android:backgroundTint="#B8BA4E"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/todo1"
        app:layout_constraintTop_toBottomOf="@+id/todo1" />

    <TextView
        android:id="@+id/todo2"
        android:layout_width="138dp"
        android:layout_height="111dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="552dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:tag="note2"
        android:text="Type something..."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ongoing"
        android:backgroundTint="#B8BA4E"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/todo2"
        app:layout_constraintTop_toBottomOf="@+id/todo2" />

    <TextView
        android:id="@+id/todo3"
        android:layout_width="138dp"
        android:layout_height="111dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="652dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:tag="note3"
        android:text="Type something..."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNote3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Ongoing"
        android:backgroundTint="#B8BA4E"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/todo3"
        app:layout_constraintTop_toBottomOf="@+id/todo3" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:backgroundTint="#F4DEA4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/back_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>
